@model IList<Post>

<h1>Lista de posts</h1>

<table>
    <tr>
        <th>Titulo</th>
        <th>Resumo </th>
        <th>Categoria</th>
        <th>Ações</th>
        <th>Publicado?</th>
    </tr>
    @foreach (Post post in Model)
    {
        <tr>
            <td>@post.Titulo</td>
            <td>@post.Resumo</td>
            <td>
                <a href="/Posts/Categoria/@post.Categoria">@post.Categoria</a>
            </td>
            <td>
                <a href="/Posts/Editar/@post.Id">Editar</a>
                <a href="/Posts/Excluir/@post.Id">Excluir</a>
                
            </td>
            <td>
                @if(post.DataPublicacao.HasValue)
                {
                    @Html.Raw(post.DataPublicacao.Value.ToString("dd/MM/yyyy"))
                }else
                {
                <a href="/Posts/PublicaPost/@post.Id">Publicar</a>
                }
            </td>
        </tr>
    }
</table>